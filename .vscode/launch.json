  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: Debug",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/api",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "command": "npm run dev"
    },
    {
      "name": "APP: Fullstack Debug",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/app",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
